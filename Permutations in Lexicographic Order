def perm_gen_lex(a):
    """A program that generates all the permutations of the characters in a string"""
    mylist = []
    if len(a) == 0: #base case 1
        return []
    elif len(a) == 1: #base case 2
        return [a]
    else:
        for i in range(len(a)):
            smaller = a[0:i] + a[i+1:] #creating a smaller string by removing a character
            permutations = perm_gen_lex(smaller) #generating the permutations for the smaller string
            for perm in permutations:
                mylist.append(a[i] + perm) #adding back the removed character and adding each permutation to a list
        return mylist #returning the list created
